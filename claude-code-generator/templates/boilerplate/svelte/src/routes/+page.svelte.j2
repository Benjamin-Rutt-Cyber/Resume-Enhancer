{% raw %}<script lang="ts">
	let healthData: any = null;
	let healthError: string | null = null;
	let loading = false;

	async function checkHealth() {
		loading = true;
		healthData = null;
		healthError = null;

		try {
			const response = await fetch('/api/health');
			if (!response.ok) {
				throw new Error(`HTTP error! status: ${response.status}`);
			}
			healthData = await response.json();
		} catch (error: any) {
			healthError = error.message || 'Unknown error';
		} finally {
			loading = false;
		}
	}
</script>

<svelte:head>
	<title>{% endraw %}{{ project_name }}{% raw %}</title>
</svelte:head>

<div class="container">
	<div class="hero">
		<h1>Welcome to {% endraw %}{{ project_name }}{% raw %}</h1>
		<p class="description">{% endraw %}{{ project_description }}{% raw %}</p>
	</div>

	<div class="card">
		<h2>Getting Started</h2>
		<p>
			This is a SvelteKit application. Edit this page in
			<code>src/routes/+page.svelte</code>
		</p>

		<div class="health-check">
			<h3>Health Check</h3>
			<button on:click={checkHealth} disabled={loading}>
				{loading ? 'Checking...' : 'Test API Connection'}
			</button>

			{#if healthData}
				<div class="success">
					<p>✓ API is healthy!</p>
					<pre>{JSON.stringify(healthData, null, 2)}</pre>
				</div>
			{/if}

			{#if healthError}
				<div class="error">
					<p>✗ API connection failed</p>
					<p class="error-message">{healthError}</p>
				</div>
			{/if}
		</div>
	</div>
</div>

