<template>
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Welcome to {{ project_name }}
      </h1>
      <p class="text-xl text-gray-600">
        {{ project_description }}
      </p>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-semibold mb-4">Getting Started</h2>
      <p class="text-gray-700 mb-4">
        This is a Nuxt 3 application with Tailwind CSS. Edit this page in
        <code class="bg-gray-100 px-2 py-1 rounded">pages/index.vue</code>
      </p>

      <div class="mt-6">
        <h3 class="text-lg font-semibold mb-2">Health Check</h3>
        <button
          @click="checkHealth"
          class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded transition-colors"
        >
          Test API Connection
        </button>

        <div v-if="healthData" class="mt-4 p-4 bg-green-50 border border-green-200 rounded">
          <p class="text-green-800">✓ API is healthy!</p>
          <pre class="mt-2 text-sm">{% raw %}{{ healthData }}{% endraw %}</pre>
        </div>

        <div v-if="healthError" class="mt-4 p-4 bg-red-50 border border-red-200 rounded">
          <p class="text-red-800">✗ API connection failed</p>
          <p class="text-sm text-red-600 mt-1">{% raw %}{{ healthError }}{% endraw %}</p>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
const healthData = ref(null)
const healthError = ref(null)

const checkHealth = async () => {
  healthData.value = null
  healthError.value = null

  try {
    const data = await $fetch('/health', {
      baseURL: useRuntimeConfig().public.apiBase
    })
    healthData.value = data
  } catch (error: any) {
    healthError.value = error.message || 'Unknown error'
  }
}
</script>
