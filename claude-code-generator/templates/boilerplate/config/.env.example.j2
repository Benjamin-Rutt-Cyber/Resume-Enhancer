# {{ project_name }} Environment Variables
# Copy this file to .env and update with your actual values

# Application
APP_NAME={{ project_name }}
DEBUG=True
ENVIRONMENT=development

# API Configuration
API_URL=http://localhost:{{ api_port }}
FRONTEND_URL=http://localhost:{{ frontend_port }}

{% if has_authentication %}
# Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
{% endif %}
{% if database == 'postgresql' %}
# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{ project_slug }}
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB={{ project_slug }}
{% elif database == 'mongodb' %}
# MongoDB Database
DATABASE_URL=mongodb://admin:admin@localhost:27017/{{ project_slug }}?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin
MONGO_INITDB_DATABASE={{ project_slug }}
{% elif database %}
# Database
DATABASE_URL=sqlite:///./{{ project_slug }}.db
{% endif %}
{% if 'redis' in project_description.lower() or has_caching %}
# Redis Cache
REDIS_URL=redis://localhost:6379/0
{% endif %}
{% if 'email' in project_description.lower() or has_email %}
# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@{{ project_slug }}.com
{% endif %}
{% if 'payment' in project_description.lower() or has_payments %}
# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
{% endif %}
{% if 'aws' in project_description.lower() or 'storage' in project_description.lower() %}
# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET={{ project_slug }}-uploads
{% endif %}

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
