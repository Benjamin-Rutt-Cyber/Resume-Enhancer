"""
Health check endpoints.
"""

from fastapi import APIRouter{% if has_database %}, Depends
from sqlalchemy.orm import Session
from app.core.database import get_db{% endif %}

router = APIRouter()


@router.get("/health")
async def health_check({% if has_database %}db: Session = Depends(get_db){% endif %}):
    """
    Health check endpoint.

    Returns:
        dict: Health status
    """
{% if has_database %}
    # Check database connection
    try:
        db.execute("SELECT 1")
        db_status = "healthy"
    except Exception as e:
        db_status = f"unhealthy: {str(e)}"

    return {
        "status": "healthy",
        "database": db_status,
    }
{% else %}
    return {
        "status": "healthy",
        "service": "{{ project_name }}",
        "version": "0.1.0",
    }
{% endif %}
